# API
PORT=3000
ENV=dev

# MYSQL
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=namedatabase
MYSQL_USER=user
MYSQL_PASSWORD=user_password
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DIALECT=mysql

# PHPMYADMIN
PMA_HOST=mysql
PMA_USER=user
PMA_PASSWORD=user_password

# HASHAGE
HASH_MDP=10
PASS_DEFAULT=default_password

# JWT
JWT_SECRET=your_jwt_secret

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization
CORS_AGE=86400
CORS_CREDENTIALS=true

# Cookie
COOKIE_SECURE=false

# SMTP (Email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=smtp_user
SMTP_PASSWORD=smtp_password
SMTP_FROM="Pinguiz App <no-reply@mail.com>"