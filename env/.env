# API
PORT=3000
ENV=dev

# -----------------------
# MARIADB
# -----------------------
MYSQL_PORT=3306
MYSQL_DIALECT=mariadb
MYSQL_DATABASE=pinguiz
MYSQL_ROOT_PASSWORD=password

# MASTER
MYSQL_MASTER_HOST=pinguiz-sql
MYSQL_MASTER_USER=Rudy
MYSQL_MASTER_PASSWORD=password

# SLAVE
MYSQL_SLAVE_HOST=pinguiz-sql-replica
MYSQL_SLAVE_USER=Rudy
MYSQL_SLAVE_PASSWORD=password


# PHPMYADMIN
PMA_HOST=mysql
PMA_USER=user
PMA_PASSWORD=user_password

# HASHAGE
HASH_MDP=10
PASS_DEFAULT=default_password

# JWT
JWT_SECRET=your_jwt_secret

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization
CORS_AGE=86400
CORS_CREDENTIALS=true

# Cookie
COOKIE_SECURE=false

# SMTP (Email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=smtp_user
SMTP_PASSWORD=smtp_password
SMTP_FROM="Pinguiz App <no-reply@mail.com>"