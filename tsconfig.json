{
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "scripts/**/*", "tests/**/*"]
}
